@model Jogador

@{
    ViewData["Title"] = "Jogador";
}

<link rel="stylesheet" href="~/css/jogadores.css">

    <!-- MAIN -->
    <main>

        <section class="container-grid cadastro-equipes">
            
        @if (ViewBag.UserName == null)
        {
            <a class="navbar-brand" asp-area="" asp-controller="Login" asp-action="Index">Login</a>
        }
        else
        {
            <form method="post" class="frm-cad-equipe" action='@Url.Action("Cadastrar")' enctype="multipart/form-data">
                <div class="cadequipe-titulo">
                    <h1>Cadastro de Jogadores</h1>
                    <hr>
                </div>
                
                <select type="text" name="IdEquipe" class="campo-entrada" id="equipe-select">
                <option value="">Selecione uma Equipe</option>
                <option value="">Selecione</option>
                @foreach (var item in ViewBag.Equipe)
                {
                    <option value= "@item.IdEquipe">@item.Nome</option>
                }
                </select>
                
                <input name="Nome" class="campo-entrada" type="text" id="nome-jogador" placeholder="Digite o nome do Jogador:" >
                <input name="Email" class="campo-entrada" type="email" id="email-jogador" placeholder="Digite o Email do Jogador:" >
                <input  name="Senha" class="campo-entrada" type="password" id="senha" placeholder="Digite a Senha:">
                <button type="submit">Cadastrar</button>
                
                </form>
            }

            <!-- TABELA CADASTRO DE EQUIPES -->

            <table>
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Nome</th>
                        <th>Email</th>
                        <th>Equipe</th>
                        <th>Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (Jogador jogador in ViewBag.Jogador)
                    {
                    <tr>
                        <td>@jogador.IdJogador</td>
                        <td>@jogador.Nome</td>
                        <td>@jogador.Email</td>
                        <td><img src="/img/Equipes/@jogador.Equipe.Imagem" alt="@jogador.Equipe.Imagem" width="30px"></td>
                        <td><a asp-area="" asp-controller="Jogador" asp-action="Excluir" asp-route-id="@jogador.IdJogador">
                        <img class="yellow-trash" src="~/assets/trash.png" alt="">
                        </a></td>
                        <td><a asp-area="" asp-controller="Jogador" asp-action="Editar" asp-route-id="@jogador.IdJogador">Editar</a></td>
                    </tr> 
                    }

                </tbody>
            </table>
        </section>
    </main>


