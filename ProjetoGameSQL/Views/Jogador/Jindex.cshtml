@model Jogador

@{
    ViewData["Title"] = "Jogador";
}

<h2>Tela de Jogadores</h2>


<form method="post" action='@Url.Action("Cadastrar")' enctype="multipart/form-data">
    <label for="">Nome</label>
    <input type="text" name="Nome">

    <label for="">Email</label>
    <input type="text" name="Email">

    <label for="">Senha</label>
    <input type="text" name="Senha">


    <label for="">Equipe</label>
    <select class="form-control" id="IdEquipe" width="80px" name="IdEquipe">
        <option value="">Selecione
            @foreach (var item in ViewBag.Equipe)
            {
                <option value= "@item.IdEquipe">@item.Nome</option>
            }
        </option>

    </select>

    <button type="submit">Cadastrar</button>
</form> 


<table class="table table-striped table-responsive">
<thead>
        <th>ID</th>
        <th>Nome</th>
        <th>Email</th>
        <th>Senha</th>
        <th>Equipe</th>
</thead>



        <tbody>
        @foreach (Jogador jogador in ViewBag.Jogador)
        {
            <tr>
                <td>@jogador.IdJogador</td>
                <td>@jogador.Nome</td>
                <td>@jogador.Email</td>
                <td>@jogador.Senha</td>
                <td><img src="/img/Equipes/@jogador.Equipe.Imagem" alt="@jogador.Equipe.Imagem" width="30px"></td>
                <td><a asp-area="" asp-controller="Jogador" asp-action="Excluir" asp-route-id="@jogador.IdJogador">Excluir</a></td>
                <td><a asp-area="" asp-controller="Jogador" asp-action="Editar" asp-route-id="@jogador.IdJogador">Editar</a></td>
            </tr> 
        }
        </tbody>
</table>